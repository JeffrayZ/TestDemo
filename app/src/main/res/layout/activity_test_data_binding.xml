<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_test_data_binding"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.test.activity.TestDataBindingActivity">

    <Button
        android:text="测试javaBean绑定"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAllCaps="false"
        android:id="@+id/button8" />

    <Button
        android:text="测试复杂javaBean绑定"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="complexJavaBean"
        android:textAllCaps="false"/>

    <Button
        android:text="测试include"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:id="@+id/button10"
        android:textAllCaps="false"
        android:onClick="testInclude"
        android:layout_below="@+id/button8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


        <Button
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/button8"
            android:background="@mipmap/test_04"/>

    <ImageButton
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:src="@mipmap/test_04"
        android:layout_below="@+id/button10"/>

</RelativeLayout>
