<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    tools:context="com.test.activity.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/test_recycleriew"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="测试RecyclerView"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/test_line"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:text="测试Shape"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/test_footer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/test_line"
                    android:text="测试footer"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/test_toast"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="测试Toast"
                    android:textAllCaps="false"
                    android:layout_below="@+id/test_line"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <Button
                    android:id="@+id/test_layouttransition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="93dp"
                    android:text="测试LayoutTransition"
                    android:textAllCaps="false" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="测试Json数据"
                    android:id="@+id/test_json"
                    android:layout_alignBottom="@+id/test_layouttransition"
                    android:layout_alignRight="@+id/test_toast"
                    android:layout_alignEnd="@+id/test_toast"
                    android:textAllCaps="false"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="测试EditText"
                    android:id="@+id/btn_test_edittext"
                    android:textAllCaps="false"
                    android:layout_below="@+id/test_layouttransition"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="测试RxAndroid"
                    android:id="@+id/test_rx_android"
                    android:textAllCaps="false"
                    android:layout_below="@+id/test_json"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="测试AppCompact"
                    android:id="@+id/test_appcompact"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="190dp"
                    android:textAllCaps="false"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="测试ToggleButton"
                    android:id="@+id/test_toggle_button"
                    android:layout_alignTop="@+id/test_appcompact"
                    android:layout_alignRight="@+id/test_rx_android"
                    android:layout_alignEnd="@+id/test_rx_android"
                    android:textAllCaps="false"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="测试AppBarLayout"
                    android:id="@+id/test_appbar_layout"
                    android:textAllCaps="false"
                    android:layout_below="@+id/test_appcompact" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="测试BackgroundHint"
                    android:id="@+id/test_backgroundhint"
                    android:layout_below="@+id/test_toggle_button"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:textAllCaps="false"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="测试android动画"
                    android:id="@+id/test_android_animation"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:textAllCaps="false"
                    android:layout_below="@+id/test_appbar_layout"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="测试ValueAnimator实现动画"
                    android:id="@+id/test_valueAnimator"
                    android:layout_alignTop="@+id/test_android_animation"
                    android:layout_alignRight="@+id/test_backgroundhint"
                    android:layout_alignEnd="@+id/test_backgroundhint"
                    android:textAllCaps="false"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="测试Viewpager的转场动画"
                    android:id="@+id/test_viewpager"
                    android:layout_below="@+id/test_android_animation"
                    android:textAllCaps="false"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="测试BottomSheet"
                    android:id="@+id/test_bottom_sheet"
                    android:textAllCaps="false"
                    android:layout_alignTop="@+id/test_viewpager"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="测试VectorDrawable"
                    android:id="@+id/test_vector_drawable"
                    android:layout_below="@+id/test_viewpager"
                    android:textAllCaps="false"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="测试软键盘"
                    android:id="@+id/test_soft_keybord"
                    android:layout_alignTop="@+id/test_vector_drawable"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/test_vector_drawable"
                    android:text="测试Tint着色"
                    android:id="@+id/test_tint"
                    android:textAllCaps="false"/>

                <Button
                    android:text="测试recyclerview的头部悬停"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/btn_header"
                    android:elevation="0dp"
                    android:textAllCaps="false" />
            </RelativeLayout>
            <include layout="@layout/layout_more_button"></include>
        </LinearLayout>


    </ScrollView>




</RelativeLayout>
